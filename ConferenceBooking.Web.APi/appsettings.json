{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "targets": {
      "file": {
        "type": "File",
        "fileName": "nlog-all-${shortdate}.log",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file"
      }
    ]
  },
  "AllowedHosts": "*"
}
